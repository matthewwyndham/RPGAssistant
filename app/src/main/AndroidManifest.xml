<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="combobreaker.rpgassistant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GURPS"
            android:label="@string/title_activity_gurps"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".diceEmulator" />
        <activity
            android:name=".gurpsNavigator"
            android:label="@string/title_activity_gurps_navigator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Monsters" />
        <activity
            android:name=".MonsterStats"
            android:label="@string/title_activity_monster_stats"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Adds"
            android:label="@string/title_activity_adds"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LootNavigator" />
        <activity android:name=".weaponList" />
        <activity android:name=".armorList" />
        <activity
            android:name=".editWeapon"
            android:label="@string/title_activity_edit_weapon"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Characters" />
        <activity
            android:name=".editArmor"
            android:label="@string/title_activity_edit_armor"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>